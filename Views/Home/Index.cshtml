@{
    ViewBag.Title = "Home Page";
}

<form method="GET">
    <div class="container" style="margin: 30px">
        <div class="form-group">
            <label>Nome</label>
            <input class="form-control" type="text" name="nome" id="txtNome" />
        </div>
        <div class="form-group">
            <label>E-mail</label>
            <input class="form-control" type="email" name="email" id="txtEmail" />
        </div>
        <div class="form-group">
            <label>Telefone</label>
            <input class="form-control" type="text" name="telefone" id="txtTelefone" />
        </div>
        <div class="form-group">
            <label>Senha</label>
            <input class="form-control" type="password" name="senha" id="pswSenha" />
        </div>
        <div class="form-group">
            <label>Idade</label>
            <select name="idade" class="form-control">
                <option>Menor de 18 anos</option>
                <option>Maior de 18 anos</option>
            </select>
        </div>
        <div class="form-group">
            <label>Tipo de conta</label>
            <select name="conta" class="form-control">
                <option>Corrente</option>
                <option>Poupança</option>
            </select>
        </div>
        <div class="form-group">
            <label>Sexo</label>
            <select name="sexo" class="form-control">
                <option>Feminino</option>
                <option>Masculino</option>
            </select>
        </div>
        <div class="form-group">
            <input class="btn-block" type="submit" placeholder="Enviar" />
        </div>
    </div>
</form>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/inputmask/jquery.inputmask.js"></script>
<script src="~/Scripts/views/home.js"></script>